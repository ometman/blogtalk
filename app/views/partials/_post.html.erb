<%= link_to user_post_path(@user, post), id: "user_#{post.id}", class: 'posts-container' do %>
  <div class="post">
    <div class="post-header">
      <h3>Post <%= post.id %>: <%= post.title %></h3>
    </div>
    <div class="post-details">
      <p><%= truncate(post.text, length: 100) %></p>
    </div>
    <div class="comments-likes">
      <p>Comments: <%= post.comments.count %></p>
      <p>Likes: <%= post.likes.count %></p>
    </div>
    <% if can? :destroy, @post %>
      <div class="user-action-btns">
        <%= link_to 'Delete this Post', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
<% end %>
