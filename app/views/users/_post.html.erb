<div class="post">
  <div class="post-header">
    <h3>Post: <%= post.id %></h3>
  </div>
  <div class="post-details">
    <p><%= truncate(post.text, length: 100) %></p>
  </div>
  <div class="comments-likes">
    <p>Comments: <%= post.comments.count %></p>
    <p>Likes: <%= post.likes.count %></p>
  </div>
</div>
