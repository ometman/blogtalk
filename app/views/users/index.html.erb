
<h1>Users</h1>

<% @users.each do |user| %>
  <div class="user">
    <div class="user-photo">
      <%= image_tag(user.photo, alt: 'User Photo', class: 'photo') %>
    </div>
    <div class="user-details">
      <h2><%= user.name %></h2>
      <p>Number of posts: <%= user.posts.count %></p>
    </div>
  </div>
<% end %>
